{
    "extends": ["stylelint-config-standard"],
    "plugins": ["stylelint-scss"],
    "overrides": [
        {
            "files": ["**/*.scss"],
            "customSyntax": "postcss-scss"
        }
    ],
    "rules": {
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": true,
        "color-function-notation": "modern"
    },
    "ignoreFiles": ["**/node_modules/**"]
}
